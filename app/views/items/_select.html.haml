- if current_user
  -target = target || ''
  .select-div
    %ul.select-filter
      // braindead logic for functional demonstration
      %li
        %a.a-global{ :href => items_path(:sort => params[:sort], :category => @current_category), :class => "#{params[:scope] ? '' : 'selected'} option", :rel => target}
          The Crowd
      %li
        %a.a-following{ :href => items_path(:scope => 'following', :sort => params[:sort], :category => @current_category), :class => "#{params[:scope] ? 'selected' : ''} option", :rel => target}
          %span.underline
            Your
          Crowd
  .clear
