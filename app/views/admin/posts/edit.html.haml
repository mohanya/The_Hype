.columns.one.clearfix
  .column.one
    %h1= "Editing #{@post.title}"

    - form_for(@post, :url => admin_post_url(@post), :builder => HandcraftedFormBuilder) do |f|
      = render :partial => "form", :object => f
      .save_actions
        = "#{submit_tag "Update this post"} or #{link_to "Cancel and go back", admin_posts_url}"